<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" prefHeight="550.0" prefWidth="800.0" styleClass="root-pane" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SearchController">

    <!-- Search Bar -->
    <top>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
            <Label contentDisplay="BOTTOM" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Book Search" />
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <TextField fx:id="searchField" promptText="Search by title, author or ISBN" style="-fx-background-radius: 5; -fx-border-radius: 5;" HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" onAction="#onSearchAction" style="-fx-background-radius: 5; -fx-font-size: 14px;" text="Search" />
            </HBox>
        </VBox>
    </top>

    <!-- Results Table -->
    <center>
        <TableView fx:id="bookTable" prefHeight="400" prefWidth="800" style="-fx-background-radius: 5;">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="300" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="200" text="Author" />
                <TableColumn fx:id="yearColumn" prefWidth="100" text="Year" />
                <TableColumn fx:id="availabilityColumn" prefWidth="75" text="Available" />
                <TableColumn fx:id="actionColumn" prefWidth="100" text="Action" />
            </columns>
        </TableView>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox>
            <Label style="-fx-font-weight: bold;" text="Status:" />
            <TextField fx:id="statusField" editable="false" style="-fx-background-radius: 3; -fx-border-radius: 3;" HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>

</BorderPane>
