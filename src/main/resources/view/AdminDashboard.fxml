<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AdminDashboardController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="20">
        <!-- Declare New Book -->
        <TitledPane text="Declare New Book" expanded="true">
            <content>
                <VBox spacing="12" styleClass="form-box">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="Title:"       GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="newTitleField"     GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Author:"      GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="newAuthorField"    GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="ISBN:"        GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="newIsbnField"      GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Genre:"       GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <TextField fx:id="newGenreField"     GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="Year:"        GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <TextField fx:id="newYearField"      GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <Label text="Description:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <TextArea fx:id="newDescArea" wrapText="true" prefRowCount="3"
                                  GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    </GridPane>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="declareButton" onAction="#handleDeclareBook" text="Declare Book" />
                    </HBox>
                </VBox>
            </content>
        </TitledPane>

        <!-- Add Book to Library -->
        <TitledPane text="Add Book to Library" expanded="false">
            <content>
                <VBox spacing="12" styleClass="form-box">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="Select Book:"      GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <ComboBox fx:id="bookComboBox"   GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Select Library:"   GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <ComboBox fx:id="libraryComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Copies:"           GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="copyCountField"  GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </GridPane>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="addToLibraryButton" onAction="#handleAddToLibrary" text="Add to Library" />
                    </HBox>
                </VBox>
            </content>
        </TitledPane>

    </VBox>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

</ScrollPane>
