<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" styleClass="root-pane" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeController">

    <!-- Top navigation -->
    <top>
        <HBox fx:id="navBar" alignment="CENTER_LEFT" prefHeight="50" spacing="20" styleClass="nav-bar">
            <Label fx:id="logoLabel" styleClass="nav-logo" text="ðŸ“š MyLibrary" />
            <Hyperlink fx:id="homeLink" styleClass="nav-link" text="Home" />
            <Hyperlink fx:id="browseLink" styleClass="nav-link" text="Browse" />
            <Hyperlink fx:id="accountLink" styleClass="nav-link" text="My Account" />
            <Hyperlink fx:id="borrowedLink" styleClass="nav-link" text="Borrowed" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox fx:id="mainContainer" spacing="20">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <!-- Search bar -->
                <HBox fx:id="searchBar" alignment="CENTER" spacing="10">
                    <TextField fx:id="searchField" promptText="Search by title, author, ISBN" HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" text="Search" />
                </HBox>

                <!-- New Arrivals -->
                <Label fx:id="newArrivalsLabel" styleClass="section-title" text="New Arrivals" />
                <FlowPane fx:id="newArrivalsPane" hgap="10" prefWrapLength="760" vgap="10" />

                <!-- Recommendations -->
                <Label fx:id="recommendLabel" styleClass="section-title" text="Recommended for You" />
                <FlowPane fx:id="recommendPane" hgap="10" prefWrapLength="760" vgap="10" />

                <!-- Quick Links -->
                <HBox fx:id="quickLinks" alignment="CENTER" spacing="15">
                    <Button fx:id="categoriesButton" text="View All Categories" />
                    <Button fx:id="loansButton" text="My Loans" />
                    <Button fx:id="settingsButton" text="Account Settings" />
                </HBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
